<h1>burger!</h1>

<h2>in window</h2>

<ul>
  {{#each burger}}
    {{#unless Served}}
      {{> burger/burgers-block Served=true}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers that are Served!</h2>

<ul>
  {{#each burger}}
    {{#if Served}}
      {{> burger/burgers-block Served=false}}
    {{/if}}
  {{/each}}
</ul>

<h2>add a burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="Served">in window?</label><br>
    <input type="radio" name="Served" value="1" checked> In window!<br>
    <input type="radio" name="Served" value="0"> Already Eaten
  </div>

  <button type="submit">Submit</button>
</form>
